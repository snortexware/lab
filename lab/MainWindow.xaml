<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="lab.MainWindow"
         Background="Transparent"
        Height="720" Width="1080"
        WindowStyle="SingleBorderWindow"
    >


    <Border Background="#eff1f3">


        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <Border Background="#111d31" Grid.RowSpan="2">

                <DockPanel >

                    <Border DockPanel.Dock="Top" Background="#111d46" CornerRadius="65" Margin="0 10 0 0 ">

                        <Ellipse Width="50" Height="50"  >
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/images/logolma.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                    <Separator Margin="20" DockPanel.Dock="Top" Height="0.8" Background="White" />




                    <StackPanel DockPanel.Dock="Bottom" >
                        <Button  Style="{StaticResource leftButtons}" Width="27" >
                            <StackPanel Orientation="Horizontal">
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource leftButtons}" >
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Cog"  Style="{StaticResource menuButtonIcon}"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>



                </DockPanel>
            </Border>
            <Grid  Grid.Column="2" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto"  />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />

                </Grid.RowDefinitions>




                <StackPanel Margin="20" Grid.Row="1" Orientation="Horizontal">

                    <TextBlock  HorizontalAlignment="Right" Grid.Row="1" FontSize="33" FontWeight="SemiBold"  Text=" Sistema de estacionamento"/>
                </StackPanel>

                <Separator Margin="10"  Grid.Row="1"  VerticalAlignment="Bottom" Height="2" Background="Gray"  />



                <Grid Grid.Row="2" Margin="0 10 0 10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto">



                        </ColumnDefinition>


                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="85">


                        </RowDefinition>
                    </Grid.RowDefinitions>


                    <Grid Width="230"  Margin="15"  >
                        <TextBlock  VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                                   Panel.ZIndex="1" Text="Procurar carro..."
                                   Visibility="Visible"></TextBlock>
                        <TextBox Style="{StaticResource txtSearchBox}" x:Name="txtSearch"></TextBox>

                        <Icon:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center"
                                               Margin="0 0 15 0" Foreground="#b0b9c6" HorizontalAlignment="Right"></Icon:PackIconMaterial>

                    </Grid>


                    <Button Width="160" Style="{StaticResource actionButtons}"  Margin="0 0 -150 0"  Grid.Row="2"  >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Vagas Disponiveis: 1000" />
                        </StackPanel>

                    </Button>
                    <TextBox Style="{StaticResource textBoxField}" Margin="10 0 -290 0" Grid.Row="2"   >


                    </TextBox>
                    <Button Style="{StaticResource actionButtons}" Margin="10 0 -425 0"  Grid.Row="2" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Descrição" />
                            <Icon:PackIconMaterial Kind="PlusBox" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>

                    </Button>
                    <Button Style="{StaticResource actionButtons}"  Margin="10 0 -560 0" Grid.Row="2" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Descrição" />
                            <Icon:PackIconMaterial Kind="PlusBox" Style="{StaticResource menuButtonIcon}" />
                        </StackPanel>

                    </Button>

                </Grid>


                <Grid Grid.Row="3" Margin="0,0,0,-11" Grid.RowSpan="2" >

                    <Button Width="80" Style="{StaticResource actionButtons}"  Margin="0,0,763,50"  >
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="History" ></Icon:PackIconMaterial>
                            <TextBlock Text="Ativos"></TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Width="80" Background="Red" Style="{StaticResource actionButtons}"  Margin="0,0,670,50"  >
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="History" ></Icon:PackIconMaterial>
                            <TextBlock Text="Ativos"></TextBlock>
                        </StackPanel>
                    </Button>
                </Grid>



                <DataGrid Grid.Row="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn>
                            <DataGridTextColumn.Header>
                                Hello
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                    </DataGrid.Columns>


                </DataGrid>




            </Grid>
        </Grid>





    </Border>
</Window>
