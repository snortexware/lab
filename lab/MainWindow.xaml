<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="lab.MainWindow"
         Background="Transparent"
        Height="720" Width="1080"
        WindowStyle="SingleBorderWindow"
    >


    <Border Background="White">


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <Border Grid.Row="1" Background="#111d5e">

                <DockPanel >

                    <Border DockPanel.Dock="Top" Margin="40 10 0 0 " Width="128" Height="118" RenderTransformOrigin="0.094,0.526">

                        <Ellipse Margin="-12,0,40,38" >
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/images/logolma.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                    <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="White" />




                    <StackPanel DockPanel.Dock="Top">
                        <Button Style="{StaticResource leftButtons}" >
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Home" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Inicio"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource leftButtons}" >
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Cog"  Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Configurações"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>



                </DockPanel>
            </Border>
            <Grid HorizontalAlignment="Right" Margin=" 0 0 -850 400" Grid.Row="2" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto"  />
                    <RowDefinition Height="0*" />
                    <RowDefinition Height="auto" />

                </Grid.RowDefinitions>


                <TextBlock Grid.Row="1" FontSize="33" FontWeight="SemiBold" Margin="20,31,418,30" ><Run Language="pt-br" Text="Carros | Ativos"/></TextBlock>

                <Button Width="160" Style="{StaticResource actionButtons}"  Margin="0,0,680,20" Grid.Row="2"  >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Vagas Disponiveis: 1000" />
                    </StackPanel>

                </Button>
                <TextBox Style="{StaticResource textBoxField}" Margin="0,0,540,20" Grid.Row="2"   >


                </TextBox>
                <Button Style="{StaticResource actionButtons}" Margin="0,0,390,20" Grid.Row="2" >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Descrição" />
                        <Icon:PackIconMaterial Kind="PlusBox" Style="{StaticResource menuButtonIcon}" />
                    </StackPanel>

                </Button>
                <Button Style="{StaticResource actionButtons}" Margin="0,0,240,20" Grid.Row="2" >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Descrição" />
                        <Icon:PackIconMaterial Kind="PlusBox" Style="{StaticResource menuButtonIcon}" />
                    </StackPanel>

                </Button>












            </Grid>
        </Grid>





    </Border>
</Window>
